<?xml version="1.0"?>
<contentrules>
 <rule name="rule-1"
    title="Envoyer un mail aux membres de l'ETN à la publication d'un document"
    description="" enabled="True"
    event="Products.CMFCore.interfaces.IActionSucceededEvent"
    stop-after="False">
  <conditions>
   <condition type="plone.conditions.PortalType">
    <property name="check_types">
     <element>Image</element>
     <element>Document</element>
     <element>News Item</element>
     <element>Event</element>
     <element>File</element>
    </property>
   </condition>
   <condition type="plone.conditions.WorkflowState">
    <property name="wf_states">
     <element>published</element>
    </property>
   </condition>
  </conditions>
  <actions>
   <action type="plone.actions.Mail">
    <property name="source"/>
    <property name="message">Bonjour,

${user_fullname} a publié un contenu dans l'espace de travail ${workspace_title} auquel vous êtes inscrit :

${title}

Vous pouvez le consulter à cette adresse :

${absolute_url}/view

Cordialement,

L'extranet de Midi Prénées Innovation</property>
    <property
       name="subject">[${workspace_title}] Un document a été publié : ${title}</property>
    <property name="recipients">${allowed_member_emails}</property>
    <property name="exclude_actor">False</property>
   </action>
  </actions>
 </rule>
 <rule name="rule-2"
    title="Publier automatiquement les contenus au téléversement"
    description="" enabled="True"
    event="zope.lifecycleevent.interfaces.IObjectAddedEvent"
    stop-after="False">
  <conditions>
   <condition type="plone.conditions.PortalType">
    <property name="check_types">
     <element>News Item</element>
     <element>Image</element>
     <element>Link</element>
     <element>File</element>
     <element>Document</element>
     <element>Event</element>
    </property>
   </condition>
  </conditions>
  <actions>
   <action type="plone.actions.Workflow">
    <property name="transition">publish</property>
   </action>
  </actions>
 </rule>
 <assignment name="rule-1" bubbles="True" enabled="True"
    location="/ent/projet-refonte"/>
</contentrules>